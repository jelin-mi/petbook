{{> goBack }}
<div class="container user-profile">
    <img src="{{imageUrl}}">
    {{#if pet.petsName}}
    <h2>{{pet.petsName}}'s profile</h2>
    {{else}}
    <h2>Pet's profile</h2>
    {{/if }}

    <p>Here is all you shared with us.</p>
    <div class="user-info">
        <h3>Race</h3>
        <p>{{pet.race}}</p>
        <h3>Sex</h3>
        <p>{{pet.sex}}</p>
        <h3>Age</h3>
        <p>{{pet.age}}</p>
        <h3>Color</h3>
        <p>{{pet.color}}</p>
    </div>
    {{#if isOwner}}
    <button class="greenBg"><a href="/my-pets/{{this._id}}/edit">Edit pet's profile</a></button>
    <form action="/my-pets/{{this._id}}/delete" method="post">
        <button class="greyBg">Delete this pet</button>
    </form>
    {{/if}}
</div>

