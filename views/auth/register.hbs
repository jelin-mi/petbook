<div>
    Register
    <form method="post" action="/auth/register">
        <label> Email
            <input type="text" name="email" placeholder="Your email" />
        </label>
        <label> Password
            <input type="password" name="password" placeholder="**********" />
        </label>
        <button type="submit">Create Account</button>
    </form>
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
</div>